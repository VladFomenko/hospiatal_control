<nav aria-label="...">
  <ul class="pagination">
    <% if pages.current_page == 1 %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1">Previous</a>
      </li>
    <% else %>
      <li class="page-item">
        <a class="page-link" href="<%= url_for(page: pages.current_page - 1) %>">Previous</a>
      </li>
    <% end %>

    <% pages.total_pages.times do |page| %>
      <% if page + 1 == pages.current_page %>
        <li class="page-item active">
          <a class="page-link" href="#"><%= page + 1 %> <span class="sr-only"></span></a>
        </li>
      <% else %>
        <li class="page-item">
          <a class="page-link" href="<%= url_for(page: page + 1) %>"><%= page + 1 %></a>
        </li>
      <% end %>
    <% end %>

    <% if pages.current_page == pages.total_pages %>
      <li class="page-item disabled">
        <a class="page-link" href="#">Next</a>
      </li>
    <% else %>
      <li class="page-item">
        <a class="page-link" href="<%= url_for(page: pages.current_page + 1) %>">Next</a>
      </li>
    <% end %>
  </ul>
</nav>
