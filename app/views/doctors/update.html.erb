<div class="container rounded bg-white mt-5 mb-5">
  <%= render 'shared/flash_msg', flash: flash %>
  <div class="row">
    <div class="col-md-3 border-right">
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
        <span class="font-weight-bold">Your name: <%= @doctor.first_name %></span>
        <span class="font-weight-bold">Your surname: <%= @doctor.second_name %></span>
        <span class="font-weight-bold">Category: <%= @doctor.categories.first %></span>
        <span class="font-weight-bold">Work experience: <%= @doctor.work_experience %></span>
      </div>
    </div>
    <div class="col-md-5 border-right">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="text-right">Profile Settings</h4>
        </div>
        <%= form_for(@doctor, url: doctor_path, html: { method: :patch }) do |f| %>
          <% if flash[:notice].present? %>
            <div class="alert <%= flash[:notice_class] %>" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <div class="row mt-2">
            <div class="col-md-6">
              <%= f.label :first_name, class: "labels" %>
              <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
            </div>
            <div class="col-md-6">
              <%= f.label :second_name, class: "labels" %>
              <%= f.text_field :second_name, class: "form-control", placeholder: "Surname" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :phone_number, class: "labels" %>
              <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter Phone Number" %>
            </div>
          </div>
          <div class="mt-5 text-center">
            <%= f.submit "Save Profile", class: "btn btn-primary profile-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
