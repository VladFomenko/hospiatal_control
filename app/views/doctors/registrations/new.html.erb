<div class='row justify-content-center align-items-center' style='min-height: 70vh;'>
  <div class='col-12'>
    <div class='container d-flex justify-content-center'>
      <div>
        <h2>Sign up as a Doctor</h2>

        <div id='notice-container'>
          <%= password_confirmation_error(resource) %>
          <%= phone_number_existence_error(resource) %>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% error_attrs = error_attributes(resource) %>

          <div class='field mb-3'>
            <%= f.label :first_name, class: 'form-label' %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: 'first name', class: "form-control #{'is-invalid' if error_attrs.include?(:first_name)}" %>
            <div class='form-text'>Minimum 2 letters, only latin, space, hyphen</div>
          </div>

          <div class='field mb-1'>
            <%= f.label :second_name, class: 'form-label' %>
            <%= f.text_field :second_name, autofocus: true, autocomplete: 'second name', class: "form-control #{'is-invalid' if error_attrs.include?(:second_name)}" %>
            <div class='form-text'>Minimum 2 letters, only latin, space, hyphen</div>
          </div>

          <div class='field mb-1'>
            <%= f.label :phone_number, class: 'form-label' %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: 'phone number', class: "form-control #{'is-invalid' if error_attrs.include?(:phone_number)}" %>
            <div class='form-text'>Use this format +38(XXX)XXX-XX-XX</div>
          </div>

          <div class='field mb-1'>
            <%= f.label :work_experience, class: 'form-label' %>
            <%= f.number_field :work_experience, min: 1, autofocus: true, autocomplete: 'work experience', placeholder: 'Month', class: "form-control #{'is-invalid' if error_attrs.include?(:work_experience)}" %>
            <div class='form-text'>Enter your work experience in months</div>
          </div>

          <div class='field mb-1'>
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, autocomplete: 'new-password', class: "form-control #{'is-invalid' if error_attrs.include?(:password)}" %>
            <div class='form-text'>Min 6 symbols, min 1 up and 1 low, min 1 number</div>
          </div>

          <div class='field mb-1'>
            <%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: "form-control #{'is-invalid' if error_attrs.include?(:password)}" %>
            <div class='form-text'>Min 6 symbols, min 1 up and 1 low, min 1 number</div>
          </div>

          <div class='mb-1'>
            <div class='row'>
              <div class='col' style='width: 30%;'>
                <%= f.submit 'Sign up', class: 'actions btn btn-primary w-100' %>
              </div>
              <div class='col' style='width: 40%;'></div>
              <div class='col' style='width: 30%;'>
                <%= link_to 'Log in', new_session_path(resource_name), class: 'actions btn btn-primary w-100' %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
