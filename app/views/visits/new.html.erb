<div class="container">
  <%= render 'shared/flash_msg', flash: flash %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for([current_client, @visit]) do |f| %>
        <div class="form-group">
          <%= f.label :date_of_visit %>
          <%= f.date_field :date_of_visit, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :doctor_id %>
          <%= f.collection_select :doctor_id, Doctor.all, :id, :first_name, { prompt: true }, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Visit', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

