<%= render 'shared/flash_msg', flash: flash %>
<h1>Your Visit</h1>
<table class="table">
  <thead>
  <tr>
    <th scope="col">Day of visit</th>
    <th scope="col">Status</th>
    <th scope="col">Doctor</th>
    <th scope="col">Recommendation</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @visit.date_of_visit.strftime('%d.%m.%Y') %></td>
      <td><%= @visit.status %></td>
      <td><%= link_to @visit.doctor.first_name, doctor_path(@visit.doctor) %></td>
      <td><%= @visit.recommendation %></td>
    </tr>
  </tbody>
</table>
<% if current_doctor %>
  <%= link_to 'Add recommendation', edit_doctor_visit_path(current_doctor, @visit), method: :patch %>
<% end %>